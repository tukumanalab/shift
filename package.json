{
  "name": "shift-app",
  "version": "1.0.0",
  "description": "アルバイトシフト管理アプリケーション",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server -p 8080",
    "build": "echo 'No build needed for static files'",
    "preview": "npx http-server -p 8080",
    "deploy:gas": "cd gas && ./deploy.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "app.js",
      "!**/node_modules/**"
    ]
  }
}